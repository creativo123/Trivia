<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <solid android:color="#fff" />
            <corners android:bottomLeftRadius="30dp" android:bottomRightRadius="30dp" android:topLeftRadius="30dp" android:topRightRadius="30dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
            <gradient android:startColor="#fff" android:centerColor="#B9F6CA" android:endColor="#fff"/>
        </shape>
    </item>


    <item android:state_focused="true" >
        <shape android:shape="rectangle">
            <solid android:color="#fff" />
            <corners android:bottomLeftRadius="30dp" android:bottomRightRadius="30dp" android:topLeftRadius="30dp" android:topRightRadius="30dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
            <gradient android:startColor="#fff" android:centerColor="#FAFAFA" android:endColor="#fff"/>
            <stroke android:color="#26A69A" android:width="1dp"/>

        </shape>
        <transition android:autoMirrored="true" />
    </item>


    <item>

        <shape android:shape="rectangle">
            <solid android:color="#fff" />
            <corners android:bottomLeftRadius="30dp" android:bottomRightRadius="30dp" android:topLeftRadius="30dp" android:topRightRadius="30dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
            <stroke android:color="#9E9E9E" android:width="1dp"/>
        </shape>

    </item>
</selector>